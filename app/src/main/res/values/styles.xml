<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextView style -->
    <style name="Widget.KalkulatorSzklanek.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_view_text_size</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:padding">@dimen/main_padding</item>
    </style>

    <!-- Radio Button style -->
    <style name="Widget.KalkulatorSzklanek.CompoundButton.RadioButton"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingEnd">@dimen/radio_button_padding</item>
        <item name="android:paddingStart">@dimen/radio_button_padding</item>
        <item name="android:textSize">@dimen/radio_button_text_size</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="Widget.KalkulatorSzklanek.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textSize">@dimen/text_view_text_size</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:padding">@dimen/main_padding</item>
    </style>

</resources>