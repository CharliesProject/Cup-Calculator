<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KalkulatorSzklanek" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_900</item>
        <item name="colorPrimaryVariant">@color/orange_900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_gray_600</item>
        <item name="colorSecondaryVariant">@color/blue_gray_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- TextView style -->
        <item name="android:textViewStyle">@style/Widget.KalkulatorSzklanek.TextView</item>
        <!-- Radio buttons. -->
        <item name="radioButtonStyle">@style/Widget.KalkulatorSzklanek.CompoundButton.RadioButton</item>
        <!-- TextInputLayout style -->
        <item name="textInputStyle">@style/Widget.KalkulatorSzklanek.TextInputLayout</item>
    </style>
</resources>